			<option label="month.october" value="10"/>
			<option label="month.november" value="11"/>
			<option label="month.december" value="12"/>
		</options>
	</field>
	<field formid="zipcode" binding="custom.zipCode" label="Zip code" type="string" mandatory="false" min-length="4" 
	max-length="10"	missing-error="forms.errorzip" range-error="forms.address.field.invalid" value-error="forms.address.field.invalid" />
	<action formid="submit" valid-form="true"/>
</form>