<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
	<field formid="email" label="forms.emailsignupdetails.email" type="string" mandatory="true" regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
		parse-error="profile.emailparseerror"/>
	<field formid="firstname" binding="custom.firstName" label="First Name" type="string" mandatory="false" missing-error="forms.emailsignupdetails.firstname.missing-error"/>
	<field formid="lastname" binding="custom.lastName" label="Last Name" type="string" mandatory="false" missing-error="forms.emailsignupdetails.lastname.missing-error"/>
	<field formid="dobday" binding="custom.dobDay" label="Day" type="integer" mandatory="false"
