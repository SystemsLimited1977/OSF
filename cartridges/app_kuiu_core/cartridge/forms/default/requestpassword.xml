<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
	<field formid="email" label="profile.emailAddress" type="string" mandatory="true" regexp="^([A-Za-z0-9]+(?:[\.||\-||\_][A-Za-z0-9]+)*)@([\da-zA-Z]{1,}\.){1,}[\da-zA-Z-]{2,3}$"
		parse-error="profile.emailparseerror"/>
	<action formid="confirm" valid-form="true"/>
	<action formid="send" valid-form="true"/>
	<action formid="cancel" valid-form="true"/>
</form>
