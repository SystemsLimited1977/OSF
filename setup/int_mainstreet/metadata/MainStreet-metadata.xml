                <field-length>0</field-length>
            </attribute-definition>
            <attribute-definition attribute-id="MainStreetEndpoint">
                <display-name xml:lang="x-default">MainStreetEndpoint</display-name>
                <description xml:lang="x-default">End point of the BusinessFlow Order Status WebService</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <field-length>0</field-length>
            </attribute-definition>
            <attribute-definition attribute-id="MainStreetPassword">
                <display-name xml:lang="x-default">MainStreetPassword</display-name>
